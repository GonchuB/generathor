    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title Generathor
    = stylesheet_link_tag "landing"
  %body
    .wrapper.pg-home.clean-load
      .slider-wrap.landing-angle
        .slider-ctn
          %section.landing.landing-large.text-lt.flex-active-slide{:style => "padding-top: 228px; width: 100%; float: left; margin-right: -100%; position: relative; opacity: 1; display: block; z-index: 2; background-image: url(http://40huuk1e5l5qxr2m59m9x88c.wpengine.netdna-cdn.com/wp-content/uploads/2014/10/Homepage-Banners1.jpg);"}
