%section
  %h1= restaurant.name
  - %i[description location fbpage_id disclaimer primary_cuisine ordered_cuisines positive_reviews].each do |property|
    %p
      = property
      %br
      = restaurant.try(property)

%section
  %h2 Features
  %p
    Possible features:
    %br
    = restaurant.features.keys.join(",")
  - restaurant.features.reject { |_, v| v == "no_info" }.each do |name, values|
    %p
      = name
      %br
      = Array(values).join(", ")

%section
  %h2 Approved Photos
  - restaurant.approved_photos.each do |approved_photo|
    %img{ src: approved_photo.photo.best.url, alt: approved_photo.id }
